<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ingoalbers.no_salad_friends" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>No Salad Friends</name>
    <description>
      Simpsons already did it! And now you can also do it. Stop eating the food of my food!
      You can listen to the classic sound of meaty tastiness. Mhmmmm... bacon!
      Also in YOUR language (your language might not be included)
    </description>
    <author email="ingo.albers@live.de">
      Ingo Albers, his (no-salad) friends, and Alberto
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
      <allow-intent href="market:*" />
    </platform>
    <icon density="mdpi" height="57" platform="android" src="www/app_icon.png" width="57" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.1" />
    <plugin name="cordova-plugin-media" spec="~2.2.0" />
</widget>
